<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myfruit.pms.mapper.ItemMapper">
    <insert id="insertItem" parameterType="com.myfruit.pms.dto.ItemDto"
        useGeneratedKeys="true" keyProperty="id">
        insert into items (name) values (#{item});
    </insert>

    <select id="getItemById" resultType="com.myfruit.pms.dto.ItemDto">
        SELECT id, name AS item FROM items WHERE id = #{id};
    </select>

    <select id="getItems" resultType="com.myfruit.pms.dto.ItemDto">
        SELECT id, name as item FROM items order by id limit #{limit} offset #{offset};
    </select>

    <select id="countTotal" resultType="Integer">
        SELECT count(*) FROM items;
    </select>

    <update id="updateItem" parameterType="com.myfruit.pms.dto.ItemDto">
        update items set name = #{item} where id = #{id};
    </update>

    <delete id="deleteItem">
        delete from items where id = #{id};
    </delete>
</mapper>