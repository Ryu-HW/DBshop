<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.DBshop.orders.OrdersMapper">

    <insert id="insertOrder" parameterType="kr.co.DBshop.orders.Order">
        INSERT INTO orders (user_id, order_status, total_amount, shipping_address)
        VALUES (#{user_id}, #{order_status}, #{total_amount}, #{shipping_address})
    </insert>

    <select id="getOrders" resultType="kr.co.DBshop.orders.Order">
        SELECT * FROM orders
    </select>

    <select id="getOrderById" parameterType="long" resultType="kr.co.DBshop.orders.Order">
        SELECT * FROM orders WHERE order_id = #{orderId}
    </select>

    <update id="updateOrder" parameterType="kr.co.DBshop.orders.Order">
        UPDATE orders
        SET
        order_status = #{order_status},
        total_amount = #{total_amount},
        shipping_address = #{shipping_address}
        WHERE order_id = #{order_id}
    </update>

    <delete id="deleteOrder" parameterType="int">
        DELETE FROM orders WHERE order_id = #{orderId}
    </delete>


</mapper>