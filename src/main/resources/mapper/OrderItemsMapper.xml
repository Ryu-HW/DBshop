<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.DBshop.mapper.order_items.OrderItemsMapper">

    <select id="selectOrderItems" resultType="kr.co.DBshop.dto.order_items.OrderItemsDto">
        select * from order_items where order_id = #{orderId}
    </select>

    <insert id="insertOrderItems" parameterType="kr.co.DBshop.dto.order_items.OrderItemsDto">
        insert into order_items (order_id, product_id,quantity,price) values (#{orderId},#{productId},#{quantity},#{price})
    </insert>
</mapper>